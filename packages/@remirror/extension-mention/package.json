{
  "name": "@remirror/extension-mention",
  "version": "1.0.0-next.58",
  "description": "Mention extension for the remirror wysiwyg editor",
  "homepage": "https://github.com/remirror/remirror/tree/HEAD/packages/@remirror/extension-mention",
  "repository": "https://github.com/remirror/remirror/tree/HEAD/packages/@remirror/extension-mention",
  "license": "MIT",
  "contributors": [
    "Ifiok Jr. <ifiokotung@gmail.com>"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/remirror-extension-mention.esm.js",
      "require": "./dist/remirror-extension-mention.cjs.js",
      "browser": "./dist/remirror-extension-mention.browser.esm.js",
      "types": "./dist/remirror-extension-mention.cjs.d.ts",
      "default": "./dist/remirror-extension-mention.esm.js"
    },
    "./package.json": "./package.json",
    "./types/*": "./dist/declarations/src/*.d.ts"
  },
  "main": "dist/remirror-extension-mention.cjs.js",
  "module": "dist/remirror-extension-mention.esm.js",
  "browser": {
    "./dist/remirror-extension-mention.cjs.js": "./dist/remirror-extension-mention.browser.cjs.js",
    "./dist/remirror-extension-mention.esm.js": "./dist/remirror-extension-mention.browser.esm.js"
  },
  "types": "dist/remirror-extension-mention.cjs.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@remirror/extension-events": "1.0.0-next.58",
    "@remirror/messages": "0.0.0",
    "escape-string-regexp": "^4.0.0"
  },
  "devDependencies": {
    "@remirror/core": "1.0.0-next.58",
    "@remirror/pm": "1.0.0-next.58"
  },
  "peerDependencies": {
    "@remirror/core": "1.0.0-next.58",
    "@remirror/pm": "1.0.0-next.58"
  },
  "publishConfig": {
    "access": "public"
  },
  "meta": {
    "sizeLimit": "5 KB"
  }
}
